<div class="container">
<div class="b-prompt">
	<%= image_tag "bee.png", width:"62px", height:"72px" %>
    <p id='friend'>Matt's friend. <%= link_to "Create a MattID", new_user_path %></p>
</div>

<div class="writing">
<p>or</p>
<p>Log in to your existing KungAccount</p>
</div>

<%= form_for(:session, url: login_path) do |f| %>  
<div class="form-horizontal">
    <div class="form-group">
		<label class="control-label col-sm-5 col-md-5 col-lg-5" for="first_name">MattID</label>
		<div class="col-sm-3 col-md-3 col-lg-3">
  			<%= f.text_field :username, :placeholder => "MattID" %>
  		</div>
  	</div>
  	<div class="form-group">
		<label class="control-label col-sm-5 col-md-5 col-lg-5" for="first_name">Password</label>
		<div class="col-sm-3 col-md-3 col-lg-3">
			<%= f.password_field :password, :placeholder => "Password" %> <br>
		</div>
	</div>
	
	<div class="form-group">
    <div class="col-sm-offset-5 col-md-offset-5 col-lg-offset-5 col-sm-3 col-md-3 col-lg-3">
  <%= f.submit "Log in", class: "btn btn-default" %>
  	</div>
  	</div>
<% end %>
</div>
</div>